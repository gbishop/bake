# From https://www.chainbaker.com/seeded-rye/

starter:
  rye
  water
  hydration = 100%

seeds:
  sunflower_seeds_sr = _part
  pumpkin_seeds_sr = _part
  sesame_seeds_sr = _part
  flaxseed_meal_sr = _part
  chia_seeds_sr = 2 / 7 * _part

soaker:
  seeds = 85.71%
  water = seeds

dough:
  soaker
  water
  starter = 14.29%
  # increase the yeast from 0.1429% to speed it up
  yeast = 0.20%
  salt = 2.29%
  raisins = 14.29%
  rye

  # for coating
  sunflower_seeds = 50%

  # scale for my 1 pound pan
  total_flour = 350g / 2
  # his hydration is only 47% after accounting for the seeds
  # increase to 60%
  hydration = 80%

